---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="nav-bar">
        <h1 class="text-gradient">{title}</h1>
        <nav>
          <ul id="main-nav-ul">
            <li class="nav-link"><a href="">Docs</a></li>
            <li class="nav-link"><a href="">Admin</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <div>
      <slot />
    </div>
  </body>
</html>

<style>
  /*local style for header navbar*/
  header {
    position: sticky;
    top: 0;
  }
  .nav-bar {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-left: 1.5rem;
    padding-top: 1rem;
    /* padding-bottom: 0.5rem; */
  }

  h1 {
    flex-grow: 1;
  }

  #main-nav-ul {
    display: flex;
    flex-direction: row;
    /* justify-content: space-evenly;
    align-items: stretch; */
    margin-right: 1.2vw;
    margin-left: auto;
    text-indent: 2vw;
  }

  li {
    /* background-color: rgba(var(--accent), 15%); */
    padding: 1em;
    display: flex;
    align-items: center;
    text-align: center;
  }

  li :hover {
    /* background-color: rgba(var(--accent), 15%); */
    border-radius: 5px;
  } 

  a {
    text-decoration: none;
  }
</style>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  main {
    margin: auto;
  }
  h1 {
    font-size: 2rem;
    font-weight: 800;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
